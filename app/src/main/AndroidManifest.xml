<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dbmsproject2.dbmsproject2" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterationActivity"
            android:label="@string/title_activity_registeration"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".PurposeActivity"
            android:label="@string/title_activity_purpose"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SurveyActivity"
            android:label="@string/title_activity_survey"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".TemplateActivity"
            android:label="@string/title_activity_template"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".RecoverPassword"
            android:label="@string/title_activity_recover_password"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".PasswordShowActivity"
            android:label="@string/title_activity_password_show"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ForgotPassPhraseActivity"
            android:label="@string/title_activity_forgot_pass_phrase"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
